{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "Reddiverse",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "media": {
    "dir": "assets"
  },
  "menu": {
    "items": [
      {
        "label": "Generate New Reddiverse",
        "description": "Initialize world config (biome + seed)",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/start-world-create"
      }
      
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "forms": {
    "worldConfigForm": "/internal/form/world-config-submit",
    "worldConfigCreateForm": "/internal/form/world-config-create"
  },
  "permissions": {
    "redis": true,
    "media": true
  },
  "dev": {
    "subreddit": "myvoxel234_dev"
  }
}